@using Models;
@model List<List>
@{
    ViewBag.Title = "List";
}

@if (Model != null && Model.Count > 0)
{
    <p class="text-right">
        <span class="green">@ViewBag.Message</span>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/Definitions/NewList'">New</button>
    </p>
    <table id="grid" class="display nowrap" cellspacing="0" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (List item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>@(item.IsDeleted ? "Yes" : "No")</td>
                    <td><a href="@String.Concat("/Definitions/EditList?id=", item.ListID)"><i class="fa fa-edit"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts {
    <script>
        $(function () {
            $("#listListItem").addClass("current-page");
            $('#grid').DataTable({
                responsive: true
            });
        })
    </script>
}