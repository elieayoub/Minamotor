@using Web.Helpers
@{
    DataHelper _dataHelper = Session["Global_DataHelper"] as DataHelper;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Mina cars, lebanon cars, tripoli lebanon, tripoli cars, buy cars lebanon, Minamotor.com" />
    <meta name="description" content="Minamotor.com Buy cars in Mina, Tripoli, Lebanon" />
    <meta property="og:url" content="@(ViewBag.FacebookURL == null ? "http://www.minamotor.com/" : ViewBag.FacebookURL)" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@(ViewBag.FacebookTitle == null ? "Mina Motor" : ViewBag.FacebookTitle)" />
    <meta property="og:description" content="@(ViewBag.FacebookDescription == null ? "Minamotor.com Buy cars in Mina, Tripoli, Lebanon" : ViewBag.FacebookDescription)" />
    <meta property="og:image" content="@(ViewBag.FacebookImage == null ? "http://www.minamotor.com/Images/FacebookMainImage1.jpg" : ViewBag.FacebookImage)" />
    <meta property="og:image:secure_url" content="@(ViewBag.FacebookImageSecured == null ? "https://www.minamotor.com/Images/FacebookMainImage1.jpg" : ViewBag.FacebookImageSecured)" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <title>@ViewBag.Title - Minamotor.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="../slider/jquery.bxslider.css" rel="stylesheet" />
    <link rel="image_src" href="@(ViewBag.FacebookImage == null ? "http://www.minamotor.com/Images/FacebookMainImage1.jpg" : ViewBag.FacebookImage)" />
</head>
<body>
    <div class="header-section navbar-inverse">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 removePaddingLeft">
                    <div class="navbar-brand removePaddingLeft">
                        <div>
                            <a href="/Home/Index">
                                <img src="../Images/logo.png" alt="Mina Motor Logo" title="Mina Motor" class="logo">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 top-address">
                    <div class="header-social-link">
                        <ul class="list-unstyled social hover bg text-sm-center">
                            <li><a class="facebook" data-toggle="tooltip" href="https://www.facebook.com/minatripolimotor/" target="_blank"><i class="fa fa-facebook"></i></a></li>
                        </ul>
                    </div>
                    @*<div class="googleTranslateContainer">
                        <div id="google_translate_element"></div>
                        <script type="text/javascript">
                            function googleTranslateElementInit() {
                                new google.translate.TranslateElement({ pageLanguage: 'en', includedLanguages: 'ar', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
                            }
                        </script>
                        <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                    </div>*@
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <p>&nbsp;</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container topMenuContainer">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle navbar-inverse" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-toggle navbar-inverse navbarToggleDescription" data-toggle="collapse" data-target=".navbar-collapse">
                <span>Main Menu / القائمة الرئيسية</span>
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav topMenu">
                <li class="inactive homeListItem">@Html.ActionLink("Home / الصفحة الرئيسية", "Index", "Home")</li>
                <li class="inactive dropdownListItem">@Html.ActionLink("Inventory / قائمة السيارات", "Index", "Inventory", new { Status = (int)DataHelper.CarStatus.Active, MakeID = "", ModelID = "", MinYear = 0, MaxYear = 0, MinPrice = 0, MaxPrice = 0 }, null)</li>
                <li class="inactive aboutListItem">@Html.ActionLink("About Us / من نحن", "Index", "About")</li>
                <li class="inactive contactListItem">@Html.ActionLink("Contact Us / اتصل بنا", "Index", "Contact")</li>
            </ul>
        </div>
    </div>
    <div class="container body-content notranslate">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by <a href="mailto:elie.ayoub@outlook.com">Elie Ayoub</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-57e3d7d7f1325027"></script>

</body>
</html>
